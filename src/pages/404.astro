---
import Layout from "../layouts/Layout.astro";
import content from "../content/404.json";
import LinkBtn from "../components/atoms/LinkBtn.astro";

const textPhrases = content.text.split(".");
---

<Layout title="Not Found | Baltac Mihai">
  <main>
    <h1>{content.code}</h1>
    <h2>{content.title}</h2>
    <p>
      {
        textPhrases?.map((phrase) => {
          return <span>{phrase}</span>;
        })
      }
    </p>
    <LinkBtn href={content.cta.link} text={content.cta.text} />
  </main>
</Layout>

<style lang="scss">
  @use "../styles/settings" as *;

  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;

    @include mobile {
      margin-bottom: 10%;
    }

    h1 {
      @extend %title-size;
      margin-top: 7.5rem;
      margin-bottom: 0;
    }

    h2 {
      margin-top: -1rem;
      color: $cl-gray;
      text-align: center;

      @extend %subtitle-size;
    }
    p {
      @extend %text-size;

      text-align: center;
      width: 75%;
      margin: 1rem 0;

      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
